<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<AssignMessage async="false" continueOnError="false" enabled="true" name="Set-Topic-Name">
    <DisplayName>Set Topic Name</DisplayName>
    <Properties/>
    <Set>
        <QueryParams>
            <QueryParam name="ql">select * where name='{topicname}'</QueryParam>
        </QueryParams>
        <Verb>GET</Verb>
    </Set>
    <IgnoreUnresolvedVariables>true</IgnoreUnresolvedVariables>
    <AssignTo createNew="false" transport="http" type="request"/>
</AssignMessage>